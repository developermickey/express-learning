<%- include("./partials/navbar.ejs"); %>

    <section class="min-h-screen flex items-center justify-center bg-gray-100">
        <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">
            <h2 class="text-2xl font-bold mb-6 text-center">My Profile</h2>
            <div class="text-center">
                <img src="<%= user.profileimage %>" alt="Profile Image" class="w-32 h-32 rounded-full mx-auto mb-4" />
                <h3 class="text-xl font-semibold">
                    <%= user.firstname %>
                        <%= user.lastname %>
                </h3>
                <p class="text-gray-600">@<%= user.username %>
                </p>
                <p class="text-gray-600">
                    <%= user.email %>
                </p>
                <p class="text-gray-600">Joined on: <%= user.createdAt.toDateString() %>
                </p>


            </div>
    </section>

    <%- include("./partials/footer.ejs"); %>